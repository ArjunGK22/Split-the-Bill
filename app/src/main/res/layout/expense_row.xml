<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">



       <ImageView
           android:id="@+id/vector_img"
           android:layout_width="100dp"
           android:layout_height="80dp"
           android:layout_toEndOf="@+id/date_tv"
           android:src="@drawable/foodrm" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:id="@+id/item_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@+id/vector_img"
              android:text="Item Name"
              android:textColor="@color/purple_200"
              android:textSize="18dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/paidBy_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/item_tv"
              android:layout_toEndOf="@+id/vector_img"
              android:text="You paid it for yourself" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/date_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:text="Month DD"
                 android:textSize="14dp"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/paidamt_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="â‚¹ 100"
                 android:textSize="18dp"
                 android:textStyle="bold"
                 android:layout_alignParentEnd="true"
                 android:layout_marginEnd="5dp"/>

         </RelativeLayout>



      </LinearLayout>




   </LinearLayout>











</androidx.cardview.widget.CardView>